<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Expense data</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_date %></td>
        <td><%= expense.name %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', user_expense_path(current_user, expense) %></td>
        <td><%= link_to 'Edit', edit_user_expense_path(current_user, expense) %></td>
        <td><%= link_to 'Destroy', user_expense_path(current_user, expense), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_user_expense_path(current_user) %>
